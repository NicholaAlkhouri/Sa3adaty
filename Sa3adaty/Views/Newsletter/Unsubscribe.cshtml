@{
    ViewBag.Title = "إلغاء الاشتراك بالنشرة الإلكترونية";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    
    <div class="login_form col-xs-12">
      
        <div class="col-xs-12 col-xs-offset-10 forget-tab-content" style="padding:0px;padding-top:40px;padding-bottom:20px"> 
            @if (ViewBag.Unsubscribe != null && ViewBag.Unsubscribe == true)
            {
                <div class="title-blue" style="text-align:center;">لقد تم إلغاء اشتراكك بالنشرة الالكترونية</div>
                
                
            }
            else
            {
                using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                
                
                    <div class="title-blue" style="text-align:center;">هل أنت متأكد من رغبتك بإلغاء اشتراكك بالنشرة الإلكترونية؟</div>
                    <div style="text-align:center;margin-bottom:20px">إذا ضغطت على إلغاء الاشتراك، لن تصلك النشرة الإلكترونية إلى بريدك بعد الآن.</div>
                
                    <div style="text-align:center;margin-bottom:20px"><input type="submit" class="action-btn" value="إلغاء الاشتراك" /></div>
                }
            }
        </div>
    </div>
</div>