@model Sa3adaty.Core.ViewModels.Account.LocalPasswordModel

<h3 style="text-align:center;margin-bottom:20px;">تغيير كلمة السر</h3>

@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

   
    <div><label>كلمة السر القديمة</label><span class="required-star">*</span></div>
    <div id="oldpassword_div" style="position:relative;">
        @Html.PasswordFor(m => m.OldPassword, new { id = "login-oldpassword", @class = "login-password" })
    </div>
    
     <div><label>كلمة السر الجديدة</label><span class="required-star">*</span></div>
    <div id="newpassword_div" style="position:relative;">
        @Html.PasswordFor(m => m.NewPassword, new { id = "login-newpassword", @class = "login-password" })
    </div>
    
    <div><label>تأكيد كلمة السر</label><span class="required-star">*</span></div>
    <div id="confirmpassword_div" style="position:relative;">
        @Html.PasswordFor(m => m.ConfirmPassword, new { id = "login-confirmpassword", @class = "login-password" })
    </div>
       <div class="col-xs-32" style="margin-top: 40px;text-align: center;margin-bottom: 40px;">
           <input tabindex="8" type="submit" class="action-btn" onclick="return validateSignup()" value="تغيير كلمة السر"/></div>
  
}
