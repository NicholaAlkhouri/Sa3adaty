@model Sa3adaty.Core.ViewModels.Admin.Tags.TagViewModel 

@{
    ViewBag.Title = "Edit Video Tag";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Edit Tag</h1>
    </div>
</div>
 @using (Html.BeginForm("Edit", "AdminTagOfVideo", FormMethod.Post, new { novalidate = "novalidate" }))
 {
     @Html.HiddenFor(a=> a.TagId)
<div class="row">
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                Tag Basic Info
            </div>
            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(m=>m.TagName)
                    @Html.TextBoxFor(m=> m.TagName,new { @class="form-control",required="required"})
                </div>

                <div class="form-group">
                    @Html.LabelFor(m=>m.FrontTitle)
                    @Html.TextBoxFor(m=> m.FrontTitle,new { @class="form-control"})
                </div>

                <div class="form-group">
                    @Html.LabelFor(m=>m.FrontDescription)
                    @Html.TextBoxFor(m=> m.FrontDescription,new { @class="form-control"})
                </div>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                SEO
            </div>
            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(m=>m.MetaTitle)  (<span id="mt_counter">@(55-Model.MetaTitle.Length)</span>) <span>characters remaining</span>
                    @Html.TextBoxFor(m=> m.MetaTitle,new { @class="form-control",onkeyup="textCounter(this,'mt_counter',55)",required="required"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.MetaDescription)  (<span id="md_counter">@(155-Model.MetaDescription.Length)</span>) <span>characters remaining</span>
                    @Html.TextBoxFor(m=> m.MetaDescription,new { @class="form-control",onkeyup="textCounter(this,'md_counter',155)",required="required"})
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
         <div class="panel panel-default">
            <div class="panel-body">
                <input type="submit" class="btn btn-primary" value="Save Changes"  />
            </div>
        </div>


    </div>
</div>
}

@section Scripts{
    <script src="@Url.Content("~/Scripts/bootstrap/plugins/dataTables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/plugins/dataTables/dataTables.bootstrap.js")"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>


   <!--Rich Text Editor -->
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")"></script>
    <script src="@Url.Content("~/Scripts/tag-it.min.js")" type="text/javascript" charset="utf-8"></script>
    <script src="@Url.Content("~/Scripts/editor.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/moment.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap-datetimepicker.min.js")"></script>
    <script >
        var cat_table;

        $(document).ready(function () {
            $('#datetimepicker1').datetimepicker();
        });
      
    </script>
}
   