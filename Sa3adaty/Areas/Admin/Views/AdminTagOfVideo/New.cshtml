@model Sa3adaty.Core.ViewModels.Admin.Tags.TagViewModel

@{
    ViewBag.Title = "New Video Tag";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section styles {
    <link href="@Url.Content("~/Content/bootstrap/bootstrap-datetimepicker.min.css")" rel="stylesheet" />
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Add New Tag</h1>
    </div>
</div>
 @using (Html.BeginForm("New", "AdminTagOfVideo", FormMethod.Post, new { enctype = "multipart/form-data" }))
 {
<div class="row">
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                Tag Basic Info
            </div>
            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(m=>m.TagName)
                    @Html.TextBoxFor(m=> m.TagName,new { @class="form-control",required="required"})
                </div>
                  <div class="form-group">
                    @Html.LabelFor(m=>m.FrontTitle)
                    @Html.TextBoxFor(m=> m.FrontTitle,new { @class="form-control"})
                </div>

                <div class="form-group">
                    @Html.LabelFor(m=>m.FrontDescription)
                    @Html.TextBoxFor(m=> m.FrontDescription,new { @class="form-control"})
                </div>
            </div>
        </div>

         <div class="panel panel-default">
            <div class="panel-heading">
                SEO
            </div>
            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(m=>m.MetaTitle)  (<span id="mt_counter">55</span>) <span>characters remaining</span>
                    @Html.TextBoxFor(m=> m.MetaTitle,new { @class="form-control",onkeyup="textCounter(this,'mt_counter',55)",required="required"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.MetaDescription)  (<span id="md_counter">155</span>) <span>characters remaining</span>
                    @Html.TextBoxFor(m=> m.MetaDescription,new { @class="form-control",onkeyup="textCounter(this,'md_counter',155)",required="required"})
                </div>
            </div>
        </div>
        
    </div>

    <div class="col-lg-4">
         <div class="panel panel-default">
            <div class="panel-heading">
                Publish
            </div>
            <div class="panel-body">
                <input type="submit" class="btn btn-primary" value="Save Changes"  />
            </div>
        </div>

    </div>
</div>
}
