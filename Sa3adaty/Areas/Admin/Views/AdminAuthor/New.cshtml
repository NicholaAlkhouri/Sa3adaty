@model Sa3adaty.Core.ViewModels.Admin.Authors.AuthorViewModel  

@{
    ViewBag.Title = "New Author";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section styles {
   
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Add New Author</h1>
    </div>
</div>
 @using (Html.BeginForm("New", "AdminAuthor", FormMethod.Post, new { enctype = "multipart/form-data" }))
 {
<div class="row">
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                AUthor Info
            </div>
            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(m=>m.Name )
                    @Html.TextBoxFor(m=> m.Name,new { @class="form-control",required="required"})
                </div>
               
                <div class="form-group">
                    @Html.LabelFor(m=>m.Title )
                    @Html.TextBoxFor(m=> m.Title,new { @class="form-control"})
                </div>

                 <div class="form-group">
                    @Html.LabelFor(m=>m.URL )
                    @Html.TextBoxFor(m=> m.URL,new { @class="form-control",required="required"})
                </div>

                <div class="form-group">
                    @Html.LabelFor(m=>m.Email )
                    @Html.TextBoxFor(m=> m.Email,new { @class="form-control"})
                </div>

                <div class="form-group">
                    @Html.LabelFor(m=>m.FacebookPage )
                    @Html.TextBoxFor(m=> m.FacebookPage,new { @class="form-control"})
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.FacebookId)
                    @Html.TextBoxFor(m => m.FacebookId, new { @class = "form-control" })
                </div>

                 <div class="form-group">
                    @Html.LabelFor(m=>m.Description )
                    @Html.TextAreaFor(m=> m.Description,new { @class="form-control"})
                </div>

                 <div class="form-group">
                    <label for="Images" class="control-label">Image:</label>
                    <input type="file"  id="Images" name="Images">
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                SEO
            </div>

            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.MetaTitle)  (<span id="mt_counter">50</span>) <span>characters remaining</span>
                    <i class="fa fa-info-circle hint-icon" data-toggle="popover" data-html="true" title="Meta Title Hints"
                       data-content="- Include Keyword at least once <br />- Make keyword closer to the begining of the sentence <br /> -Make it readable and friendly to the users"></i>
                    @Html.TextBoxFor(m => m.MetaTitle, new { @class = "form-control", required = "required", onkeyup = "textCounter(this,'mt_counter',50)" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.MetaDescription)  (<span id="md_counter">155</span>) <span>characters remaining</span>
                    <i class="fa fa-info-circle hint-icon" data-toggle="popover" data-html="true" title="Meta Description Hints"
                       data-content="- Include Keyword at least once <br /> - Make it attractive to the user"></i>
                    @Html.TextBoxFor(m => m.MetaDescription, new { @class = "form-control", required = "required", onkeyup = "textCounter(this,'md_counter',155)" })
                </div>
            </div>
        </div>
        
    </div>

    <div class="col-lg-4">
         <div class="panel panel-default">
            <div class="panel-heading">
                Save Changes
            </div>
            <div class="panel-body">
                <input type="submit" class="btn btn-primary" value="Save Changes"  />
            </div>
        </div>

       
    </div>
</div>
}



@section scripts {    


 }  