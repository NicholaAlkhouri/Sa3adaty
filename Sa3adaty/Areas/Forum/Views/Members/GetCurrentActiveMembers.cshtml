<div class="side-box highearners-box">
    <h5>@Html.LanguageString("Stats.FooterActiveUsersText")</h5>
    @if (Model.ActiveMembers.Any())
    {
        <ul>

            @foreach (var member in Model.ActiveMembers)
            {
                <li class="clearfix">
                    <span class="earnername">
                        <img src="@member.MemberImage(SiteConstants.GravatarLeaderboardSize)" alt="@Html.Raw(member.UserName)">
                        <a href="@member.NiceUrl">@Html.Raw(member.UserName)</a>
                    </span>

                </li>
            }
        </ul>
    }
    else
    {
        <p style="padding: 0px 10px 10px 10px;">@Html.Lang("Notifications.NoActiveMembers")</p>
    }
    
</div>